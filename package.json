{
  "name": "@niceline/monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b .",
    "build:clean": "run-s clean build",
    "clean": "yarn workspaces foreach -Ap run clean",
    "eslint:check": "eslint '**/*.ts'",
    "eslint:fix": "eslint --fix '**/*.ts'",
    "lint:check": "run-s prettier:check",
    "lint:fix": "run-s prettier:fix",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test": "yarn workspaces foreach -Ap --topological-dev run test",
    "tidy": "run-s lint:fix tidy:kids",
    "tidy:kids": "yarn workspaces foreach -Ap run tidy",
    "watch": "tsc -b . -w"
  },
  "resolutions": {
    "@niceline/chars": "workspace:*",
    "@niceline/trie": "workspace:*",
    "niceline": "workspace:*"
  },
  "dependencies": {
    "markdownlint-cli2": "^0.18.1"
  },
  "devDependencies": {
    "@gregros/eslint-config": "^0.6.0",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "eslint": "^8",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.1",
    "prettier-plugin-jsdoc": "^1.3.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-packagejson": "^2.5.0",
    "shelljs": "0.8.5",
    "shx": "^0.4.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "yarn@4.10.3"
}
