{
  "name": "niceline",
  "version": "0.1.0",
  "description": "Pretty print everything!",
  "keywords": [
    "pretty",
    "human",
    "humanize",
    "prettify",
    "readable",
    "time",
    "duration",
    "text",
    "number",
    "byte",
    "bytes",
    "filesize",
    "size",
    "path",
    "url",
    "error",
    "hash",
    "hex",
    "fraction",
    "float",
    "string",
    "function",
    "object",
    "record",
    "random",
    "date"
  ],
  "repository": "github:gregros/niceline",
  "license": "MIT",
  "author": "GregRos",
  "exports": {
    ".": {
      "require": "./dist/lib/index.js",
      "import": "./dist/lib/index.js",
      "default": "./dist/lib/index.js",
      "types": "./dist/lib/index.d.ts"
    }
  },
  "main": "dist/lib/index.js",
  "typings": "dist/lib/index",
  "scripts": {
    "build": "tsc -b .",
    "clean": "shx rm -rf dist",
    "rebuild": "run-s clean build",
    "prepare": "husky install",
    "watch": "tsc -b . --watch",
    "lint:fix": "prettier --write src/**/*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,ctsx,mtsx,html,htm,yaml,yml,json,scss,css} && eslint --fix src/**/*.{ts,mts,cts,js,mjs,cjs} ",
    "lint:check": "prettier --check src/**/*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,ctsx,mtsx,html,htm,yaml,yml,json,scss,css} && eslint src/**/*.{ts,mts,cts,js,mjs,cjs}",
    "test": "jest --coverage"
  },
  "lint-staged": {
    "*.{ts,mts,cts,js,mjs,cjs}": "node_modules/.bin/eslint --cache --fix",
    "src/**/*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,ctsx,mtsx,html,htm,yaml,yml,json,scss,css}": "node_modules/.bin/prettier --write"
  },
  "dependencies": {
    "doddle": "^7.1.6",
    "hotscript": "^1.0.13",
    "pretty-bytes": "^6.1.1",
    "pretty-ms": "^9.0.0",
    "shrink-path": "^0.3.1",
    "what-are-you": "^0.1.13"
  },
  "devDependencies": {
    "@gregros/eslint-config": "^0.6.0",
    "@swc/core": "^1.5.25",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.4",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "eslint": "^8",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.5",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.1",
    "prettier-plugin-jsdoc": "^1.3.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-packagejson": "^2.5.0",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "packageManager": "yarn@4.2.2"
}
